concat "Saving About Elexis into " $resultsDir "about_elexis" | log
get-about-menu | click
with [get-window[ t info_about ] ] {
    get-button [ t info_details ] | click
    with [get-window [ t info_details ] ] {
	    get-tab-folder | get-tab-item [ t info_update ]   | click
        get-tab-folder | get-tab-item [t info_installed ] | click
        get-tree | expand-all | get-table-data | write-csv-file [ concat  $resultsDir "about_elexis/installed.csv" ]
        get-tab-folder | get-tab-item [ t info_update ]  | click
		get-tree | expand-all | get-table-data | write-csv-file [ concat  $resultsDir "about_elexis/update.csv" ]
        get-tab-folder | get-tab-item [ t info_configuration ]  | click
     	with [get-editbox] {
            click-text "1:1" "3:3"
        }
        concat "About Elexis -> " $resultsDir "about_elexis/update.csv" | log
        get-editbox | get-text | write-lines -uri [ concat  $resultsDir "about_elexis/configuration.txt" ]
        get-tab-folder | get-tab-item [ t info_plugins ]  | click
		get-table | get-table-data | write-csv-file [ concat  $resultsDir "about_elexis/plugins.csv" ]
		get-button [ t close ] | click
    }
    get-button [ t close ] | click
}
