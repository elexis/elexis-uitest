HandleMissingInvoiceSystems
concat "Saving About Elexis 1 into " $resultsDir "about_elexis1" | log
get-about-menu | click
wait 2000
get-eclipse-window | gen-screenshot [concat $imagesDir "about_elexis1.png"]
with [get-window[ t info_about ] ] {
    get-button [ t info_details ] | click
    get-eclipse-window | gen-screenshot [concat $imagesDir "about_elexis1_details.png"]
    with [get-window [ t info_details ] ] {
    get-tab-folder | get-tab-item [t info_installed ] | click
        get-tree | expand-all | get-table-data | write-csv-file [ concat  $resultsDir "about_elexis1/installed.csv" ]
        get-tab-folder | get-tab-item [ t info_configuration ]  | click
		try {
	        get-button "In die Zwischenablage kopieren" | click -metaKeys ""
	        from-clipboard | write-lines -uri [ concat  $resultsDir "about_elexis1/configuration.txt" ]
		    log "Copied from clipboard available (Eclipse 2021)"
		} -catch { log "No copy to clipboard available (Eclipse old)"
			get-editbox | click-text "3:3"
            get-editbox | get-text | write-lines -uri [ concat  $resultsDir "about_elexis1/configuration.txt" ]
        }
        get-tab-folder | get-tab-item [ t info_plugins ]  | click
        get-table | get-table-data | write-csv-file [ concat  $resultsDir "about_elexis1/plugins.csv" ]
      try {
        concat "About Elexis -> " $resultsDir "about_elexis1/update.csv" | log
        get-tab-folder | get-tab-item [ t info_update ]   | click
        get-tree | expand-all | get-table-data | write-csv-file [ concat  $resultsDir "about_elexis1/update.csv" ]
        } -catch { log "Update info available" }
      get-button [ t close ] | click
    }
    get-button [ t close ] | click
}
