<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:schemaLocagittion="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.elexis.rcptt</groupId>
  <artifactId>h2</artifactId>
  <packaging>rcpttTest</packaging>
  <parent>
    <groupId>ch.elexis.rcptt</groupId>
    <artifactId>common</artifactId>
    <version>0.1</version>
  </parent>
  <properties>
    <myBaseDir>${project.basedir}/..</myBaseDir>
    <vmArg1>-Dch.elexis.dbFlavor=h2</vmArg1>
    <vmArg3>-Dch.elexis.dbUser=sa</vmArg3>
    <vmArg4>-Dch.elexis.dbPw=</vmArg4>
    <vmArg5>-Dch.elexis.firstMandantName=mustermann</vmArg5>
    <vmArg6>-Dch.elexis.firstMandantPassword=elexisTest</vmArg6>
    <vmArg7>-Dch.elexis.firstMandantEmail=mmustermann@elexis.info</vmArg7>
    <vmArg8>-Dch.elexis.username=mustermann</vmArg8>
    <vmArg9>-Dch.elexis.password=elexisTest</vmArg9>
    <vmArg10>-DvmArg10</vmArg10>
    <suite2run>SmokeTestSuite</suite2run>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.rcptt</groupId>
        <artifactId>rcptt-maven-plugin</artifactId>
        <version>${rcptt-maven-version}</version>
        <extensions>true</extensions>
        <configuration>
          <projects>
              <project>${project.basedir}/../KernFunktionen</project>
          </projects>
          <!-- injections are by default specified in the main pom.xml -->
          <aut>
            <!-- Use URL like this for the AUT
            ${project.basedir}/my_aut/ch.elexis.core.application.ElexisApp-[classifier].zip
            https://download.elexis.info/elexis/master/products/ch.elexis.core.application.ElexisApp-[classifier].zip
            automatically replaced according to the current platform -->
            <explicit> https://download.elexis.info/elexis/${useBranch}/products/ch.elexis.core.application.ElexisApp-[classifier].zip</explicit>
            <args>
              <arg>-nl</arg>
              <arg>${language}_CH</arg>
              <arg>-nosplash</arg>
              <arg>-noregtool</arg>
              <arg>--use-config=rpctt_h2</arg>
           </args>
            <vmArgs>
              <vmArg>-Djava.library.path=/usr/lib/jni</vmArg>
              <vmArg>-DGTK_IM_MODULE=ibus</vmArg>
              <vmArg>-Dlanguage=${language}</vmArg>
              <vmArg>-Duser.language=${language}</vmArg>
              <vmArg>${vmArg1}</vmArg>
              <!-- Somehow we cannot pass the AUTO_SERVER=TRUE option to the h2, as I do not know howto bypass the quoting -->
              <vmArg>-Dch.elexis.dbSpec=jdbc:h2:${env.HOME}/elexis/h2_elexis_rcptt/db</vmArg>
              <vmArg>${vmArg3}</vmArg>
              <vmArg>${vmArg4}</vmArg>
              <vmArg>${vmArg5}</vmArg>
              <vmArg>${vmArg6}</vmArg>
              <vmArg>${vmArg7}</vmArg>
              <vmArg>${vmArg8}</vmArg>
              <vmArg>${vmArg9}</vmArg>
              <vmArg>${vmArg10}</vmArg>
            </vmArgs>
          </aut>
                 <suites>
                       <suite>${suite2run}</suite>
                 </suites>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
              <id>dump-database-elexis-rcptt</id>
              <phase>install</phase>
              <configuration>
                <target>
                  <exec executable="java" failonerror="true">
                    <arg value="-cp"/>
                    <arg value="${project.build.directory}/aut/plugins/org.h2_1.3.170.jar"/>
                    <arg value="org.h2.tools.Script"/>
                    <arg value="-url"/>
                    <arg value="jdbc:h2:${env.HOME}/elexis/h2_elexis_rcptt/db"/>
                    <arg value="-user"/>
                    <arg value="sa"/>
                    <arg value="-script"/>
                    <arg value="${project.build.directory}/results/h2_elexis_rcptt_${language}.sql"/>
                  </exec>
                </target>
              </configuration>
              <goals>
                <goal>run</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
    </plugins>
  </build>
</project>
