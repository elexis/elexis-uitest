<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
      <groupId>ch.elexis.core</groupId>
  <artifactId>KernFunktionen</artifactId>
  <version>0.1</version>
  <packaging>rcpttTest</packaging>

  <pluginRepositories>
    <pluginRepository>
      <id>rcptt-releases</id>
      <name>RCPTT Maven repository</name>
      <url>https://repo.eclipse.org/content/repositories/rcptt-releases/</url>
    </pluginRepository>
  </pluginRepositories>

  <properties>
    <rcptt-maven-version>2.3.0</rcptt-maven-version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>com.googlecode.maven-download-plugin</groupId>
        <artifactId>download-maven-plugin</artifactId>
        <version>1.4.1</version>
        <executions>
           <!-- At the moment we want to use RunFromScratch
         <execution>
            <id>download-artikelstamm</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://raw.githubusercontent.com/elexis/elexis-3-base/master/tests/at.medevit.ch.artikelstamm.elexis.common.tests/rsc/artikelstamm_first_v5.xml</url>
              <unpack>true</unpack>
              <outputDirectory>${user.home}/elexis</outputDirectory>
              <md5>6d31964be9370faa87f4793dc1aba5c1</md5>
            </configuration>
          </execution>
          <execution>
            <id>download-demoDB</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>http://download.elexis.info/demoDB/demoDB_elexis_3.6.0.zip</url>
              <unpack>true</unpack>
              <outputDirectory>${user.home}/elexis</outputDirectory>
              <md5>49ce0d97169e12e07d09faedaffe4a5b</md5>
            </configuration>
          </execution>
          -->
        </executions>
      </plugin>
      <plugin>
        <groupId>org.eclipse.rcptt</groupId>
        <artifactId>rcptt-maven-plugin</artifactId>
        <version>${rcptt-maven-version}</version>
        <extensions>true</extensions>
        <configuration>
          <aut>
            <!-- Use URL like this for the AUT
            ${project.basedir}/my_aut/ch.elexis.core.application.ElexisApp-[classifier].zip
            https://download.elexis.info/elexis/master/products/ch.elexis.core.application.ElexisApp-[classifier].zip
            automatically replaced according to the current platform -->
            <explicit> https://download.elexis.info/elexis/master/products/ch.elexis.core.application.ElexisApp-[classifier].zip</explicit>
            <args>
              <arg>-nl</arg>
              <arg>de_CH</arg>
              <arg>-nosplash</arg>
              <arg>-noregtool</arg>
            </args>
            <vmArgs>
              <vmArg>-Delexis-run-mode=RunFromScratch</vmArg>
              <vmArg>-Dch.elexis.username=007</vmArg>
              <vmArg>-Dch.elexis.password=topsecret</vmArg>
            </vmArgs>
          </aut>
          <runner>
            <version>${rcptt-maven-version}</version>
            <vmArgs>
              <vmArg>-Xmx2048m</vmArg>
              <vmArg>-Xms2048m</vmArg>
            </vmArgs>
          </runner>
                 <suites>
                       <suite>AllTestsSuite</suite>
                 </suites>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
