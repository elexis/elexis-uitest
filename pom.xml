<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.elexis.rcptt</groupId>
  <artifactId>common</artifactId>
  <version>0.1</version>
  <packaging>pom</packaging>
  <properties>
    <!-- we need a version > 2.3.0 because we need the proc find-all to extract the language from the nl parameter
    commit 265067eb1ce14428ea4d33e97606934a6238d9e8
    Author: Alexander Dudaev <aleksandr.dudayev@xored.com>
    Date:   Wed Jul 25 20:56:41 2018 +0700
    Added new ECL Command "find-all"
    -->
    <!--rcptt-maven-version>2.4.0-20181219.003252-175</rcptt-maven-version-->
    <!-- we do not need a snapshot version as they change too often rcptt-maven-version>2.4.0-SNAPSHOT</rcptt-maven-version !-->
    <!--rcptt-maven-version>2.3.0</rcptt-maven-version-->
    <rcptt-maven-version>2.3.0</rcptt-maven-version>
    <rcptt-resources>${user.home}/elexis/rcptt</rcptt-resources>
    <suite2run>SmokeTestSuite</suite2run>
    <language>de</language>
    <useBranch>master</useBranch>
    <myBaseDir>${project.basedir}</myBaseDir>
  </properties>

  <pluginRepositories> <!-- tried to use https://ftp.fau.de/eclipse/content/repositories, but this does not work -->
    <pluginRepository>
      <id>rcptt-releases</id>
      <name>RCPTT Maven repository</name>
      <url>https://repo.eclipse.org/content/repositories/rcptt-releases/</url>
    </pluginRepository>
    <pluginRepository>
      <id>rcptt-snapshots</id>
      <name>RCPTT Maven Snapshots repository</name>
      <!--
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      -->
      <url>https://repo.eclipse.org/content/repositories/rcptt-snapshots/</url>
    </pluginRepository>
  </pluginRepositories> 
  <build>
    <plugins>
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-clean-plugin</artifactId>
          <version>2.4.1</version>
          <configuration>
              <filesets>
                  <fileset>
                      <directory>/tmp</directory>
                      <includes>
                        <include>elexis*db</include>
                      </includes>
                  </fileset>
                  <fileset>
                      <directory>${user.home}/elexis/demoDB</directory>
                  </fileset>
                  <fileset>
                      <directory>${user.home}/elexis</directory>
                      <includes>
                        <include>localCfg_rpctt.xml</include>
                      </includes>
                  </fileset>
                  <fileset>
                      <directory>${rcptt-resources}</directory>
                  </fileset>
              </filesets>
          </configuration>
      </plugin>
    <plugin>
      <artifactId>maven-antrun-plugin</artifactId>
      <version>1.8</version>
      <executions>
        <execution>
          <id>copy-translations</id>
          <phase>generate-sources</phase>
          <configuration>
            <target>
              <copy file="${myBaseDir}/translations.properties" tofile="${rcptt-resources}/translations.properties"/>
            </target>
          </configuration>
          <goals>
            <goal>run</goal>
          </goals>
        </execution>
        <execution>
          <id>copy-Artikelstamm_Short_v5</id>
          <phase>generate-sources</phase>
          <configuration>
            <target>
              <copy file="${user.dir}/Artikelstamm_Short_v5.xml" tofile="${rcptt-resources}/Artikelstamm_Short_v5.xml"/>
            </target>
          </configuration>
          <goals>
            <goal>run</goal>
          </goals>
         </execution>
        <execution>
          <id>copy-save_run_from_scratch.sh</id>
          <phase>generate-sources</phase>
          <configuration>
            <target>
              <exec executable="/bin/cp">
                <arg value="-p"/>
                <arg value="${myBaseDir}/save_run_from_scratch.sh"/>
                <arg value="${rcptt-resources}/save_run_from_scratch.sh"/>
              </exec>
            </target>
          </configuration>
          <goals>
            <goal>run</goal>
          </goals>
        </execution>
      </executions>
    </plugin>
    <plugin>
        <groupId>com.googlecode.maven-download-plugin</groupId>
        <artifactId>download-maven-plugin</artifactId>
        <version>1.4.1</version>
        <executions>
          <execution>
            <id>download-ODF-Hilotec-Vorlagen</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://github.com/hilotec/elexis-vorlagen/archive/master.zip</url>
              <outputDirectory>${rcptt-resources}</outputDirectory>
              <unpack>true</unpack>
              <md5>e34d89f968bbf9fd5f20534f53bd1d20</md5>
            </configuration>
          </execution>
          <execution>
            <id>download-MiGeL-01012019.xlsx</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://www.bag.admin.ch/dam/bag/de/dokumente/kuv-leistungen/Mittel-%20und%20Gegenst%C3%A4ndeliste/migel-gesamtliste-01012019-excel.xlsx.download.xlsx/Mittel%20und%20Gegenst%C3%A4ndeliste%20vom%2001.01.2019%20in%20Excel-Format.xlsx</url>
              <outputDirectory>${rcptt-resources}</outputDirectory>
              <outputFileName>MiGeL-01012019.xlsx</outputFileName>
              <md5>18f9c8bf0ad6b364a89c30cfe3da8cd3</md5>
            </configuration>
          </execution>
          <execution>
            <id>download-MiGeL-01012019-de</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://download.elexis.info/download/migel/migel_01012019.csv.0</url>
              <outputDirectory>${rcptt-resources}</outputDirectory>
              <outputFileName>MiGeL-01012019_de.csv</outputFileName>
              <md5>f9be54f8f2e551bcc60059b78f9c8e12</md5>
            </configuration>
          </execution>
          <execution>
            <id>download-MiGeL-01012019-fr</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://download.elexis.info/download/migel/migel_01012019.csv.1</url>
              <outputDirectory>${rcptt-resources}</outputDirectory>
              <outputFileName>MiGeL-01012019_fr.csv</outputFileName>
              <md5>6ba9e0b06ff1aa59e53fde9540e2f912</md5>
            </configuration>
          </execution>
          <execution>
            <id>download-Analyseliste_EAL</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://www.bag.admin.ch/dam/bag/de/dokumente/kuv-leistungen/leistungen-und-tarife/Analysenliste/analysenliste-01012019-excel.xlsx.download.xlsx/Analysenliste%20vom%2001.01.2019%20in%20Excel-Format.xlsx</url>
              <outputFileName>EAL_01012019.xlsx</outputFileName>
              <outputDirectory>${rcptt-resources}</outputDirectory>
              <md5>1b2ad66e742ea3bd7479040d45cf7373</md5>
            </configuration>
          </execution>
          <execution>
            <id>download-TARMED_01_09_00</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://www.fmh.ch/files/zip1/TARMED__Datenbank_01.09.00_BR_KVG-27.12.2017.zip</url>
              <outputDirectory>${rcptt-resources}</outputDirectory>
              <md5>08d47fd527a7d5282e140aa63ea48fd0</md5>
              <unpack>true</unpack>
            </configuration>
          </execution>
          <execution>
            <id>download-h2-jar</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>http://central.maven.org/maven2/com/h2database/h2/1.4.197/h2-1.4.197.jar</url>
              <outputDirectory>${rcptt-resources}</outputDirectory>
              <md5>f9893acfa22b7fe1492dd9c515af2e5b</md5>
            </configuration>
          </execution>
          <execution>
            <id>download-blocks_landarztpraxis_sevelen</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://sourceforge.net/p/elexis/mailman/attachment/VI1P190MB0062201ADBD6CCA8C6BC290E96040%40VI1P190MB0062.EURP190.PROD.OUTLOOK.COM/1/</url>
              <outputFileName>blocks_landarztpraxis_sevelen.xchange</outputFileName>
              <outputDirectory>${rcptt-resources}</outputDirectory>
              <md5>b9f436fdbbb8b8f107215bf48a004d20</md5>
            </configuration>
          </execution>
          <execution>
            <id>download-artikelstamm_01012019_v5</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://artikelstamm.elexis.info/v5/20190101/artikelstamm_01012019_v5.xml</url>
              <outputDirectory>${rcptt-resources}</outputDirectory>
              <md5>b867b162184045ff5e910b6d3b0ce9a7</md5>
            </configuration>
          </execution>
        </executions>
      </plugin>
       <plugin>
        <groupId>org.eclipse.rcptt</groupId>
        <artifactId>rcptt-maven-plugin</artifactId>
        <version>${rcptt-maven-version}</version>
        <extensions>true</extensions>
        <configuration>
          <testOptions>
            <!-- the default value of 300 did was not long enough for VisitAllViews -->
            <testExecTimeout>1800</testExecTimeout>
          </testOptions>
          <aut>
            <injections>
              <!-- Only installl ch.elexis.base.ch to minimize startup time <!-->
              <injection>
                <site>https://download.elexis.info/elexis/${useBranch}/p2/elexis-3-base</site>
                <!-- When installing CST here, it looks like we have problems with a missing ch.elexis.befunde
                <features>
                  <feature>ch.elexis.base.ch.feature.feature.group</feature>
                  <feature>ch.gpb.elexis.cst.feature.feature.group</feature>
                  <feature>ch.medshare.mediport.feature.feature.group</feature>
                </features>
                                -->
              </injection>
            </injections>
            <!-- Use URL like this for the AUT
            ${project.basedir}/my_aut/ch.elexis.core.application.ElexisApp-[classifier].zip
            https://download.elexis.info/elexis/master/products/ch.elexis.core.application.ElexisApp-[classifier].zip
            automatically replaced according to the current platform -->
            <explicit> https://download.elexis.info/elexis/${useBranch}/products/ch.elexis.core.application.ElexisApp-[classifier].zip</explicit>
            <args>
              <arg>-nl</arg>
              <arg>${language}_CH</arg>
              <arg>-nosplash</arg>
              <arg>-noregtool</arg>
              <arg>--use-config=rpctt</arg>
           </args>
            <vmArgs>
              <vmArg>-Djava.library.path=/usr/lib/jni</vmArg>
              <vmArg>-DGTK_IM_MODULE=ibus</vmArg>
              <vmArg>-Dlanguage=${language}</vmArg>
              <vmArg>-Duser.language=${language}</vmArg>
              <!-- did not work as rcptt-maven-plug does not handle " in vmargs
              <vmArg>-Dch.elexis.dbUser=sa</vmArg>
              <vmArg>-Dch.elexis.dbPw=</vmArg>
              <vmArg>-Dch.elexis.dbFlavor=h2</vmArg>
              <vmArg>-Dch.elexis.dbSpec=jdbc:h2:"${user.home}/elexis/db_for_rcptt/demoDB/db;AUTO_SERVER=TRUE"</vmArg>
              -->
              <vmArg>-Dch.elexis.username=test</vmArg>
              <vmArg>-Dch.elexis.password=test</vmArg>
            </vmArgs>
          </aut>
          <runner>
            <version>${rcptt-maven-version}</version>
            <vmArgs>
              <vmArg>-Xmx2048m</vmArg>
              <vmArg>-Xms2048m</vmArg>
            </vmArgs>
          </runner>
                 <suites>
                       <suite>${suite2run}</suite>
                 </suites>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
