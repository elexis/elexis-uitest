       <plugin>
        <groupId>org.eclipse.rcptt</groupId>
        <artifactId>rcptt-maven-plugin</artifactId>
        <version>${rcptt-maven-version}</version>
        <extensions>true</extensions>
        <configuration>
           <projects>
              <project>${project.basedir}/KernFunktionen</project>
          </projects>
          <testOptions>
            <!-- the default value of 300 for testExecTimeout was not long enough for VisitAllViews -->
            <!-- full list given http://rcptt.xored.com/arguments -->
            <testExecTimeout>3600</testExecTimeout>
            <!-- contextRunnableTimeout 	180000 	Context applying timeout in milliseconds  Execution time was 1'111S -> 1200 * 1000-->
            <contextRunnableTimeout>1200000</contextRunnableTimeout>
        </testOptions>
          <aut>
            <injections>
              <!-- Only installl ch.elexis.base.ch to minimize startup time <!-->
              <injection>
                <site>https://download.elexis.info/elexis/${useBranch}/p2/elexis-3-base</site>
                <!--
               <site>file:///opt/rm/elexis-master/elexis-3-base/ch.elexis.base.p2site/target/repository</site>
                -->
                <!-- When installing CST here, it looks like we have problems with a missing ch.elexis.befunde
                <features>
                  <feature>ch.elexis.base.ch.feature.feature.group</feature>
                  <feature>ch.gpb.elexis.cst.feature.feature.group</feature>
                  <feature>ch.medshare.mediport.feature.feature.group</feature>
                </features>
                            -->
              </injection>
            </injections>
            <!-- Use URL like this for the AUT
            ${project.basedir}/my_aut/ch.elexis.core.application.ElexisApp-[classifier].zip
              <explicit>/opt/rm/elexis-master/elexis-3-core/ch.elexis.core.p2site/target/products/ch.elexis.core.application.ElexisApp-[classifier].zip</explicit>
            automatically replaced according to the current platform -->
            <explicit>${autExplicit}</explicit>
          <args>
              <arg>-nl</arg>
              <arg>${language}_CH</arg>
              <arg>-nosplash</arg>
              <arg>-noregtool</arg>
              <arg>--use-config=rpctt</arg>
           </args>
            <vmArgs>
              <vmArg>-Djava.library.path=/usr/lib/jni</vmArg>
              <vmArg>-DGTK_IM_MODULE=ibus</vmArg>
              <vmArg>-Dlanguage=${language}</vmArg>
