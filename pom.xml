          <goals>
            <goal>run</goal>
          </goals>
        </execution>
         <execution>
          <id>unpack-vorlagen-hilotec</id>
          <phase>process-sources</phase>
          <configuration>
            <target>
              <exec executable="${unzipExe}" failonerror="true">
                <arg value="-j"/>
                <arg value="-d"/>
                <arg value="${rcptt-resources}/vorlagen"/>
                <arg value="${rcptt-resources}/master.zip"/>
¨                <arg value="elexis-vorlagen-master/hilotec-odt/*"/>
              </exec>
            </target>
          </configuration>
          <goals>
            <goal>run</goal>
          </goals>
        </execution>
